{
  "web_interface": {
    "title": "Real-time Voice Translation",
    "max_upload_size": 500,
    "supported_formats": ["mp4", "avi", "mov", "mkv"],
    "default_parameters": {
//      "source_language": "ja",
//      "target_language": "en",
      "top_k": 15,
      "top_p": 0.7,
      "temperature": 1.0,
      "speed": 1.1,
      "voice_volume": 1.5,
      "background_volume": 0.8,
      "master_volume": 1.7,
      "clustering_method": "ward",
      "min_cluster_size": 8,
      "threshold": 0.6,
      "min_duration_off": 0.75,
      "min_segment_duration": 0.5
    },
    "cleanup_temp_files": true,
    "temp_dir_prefix": "streamlit_translation_"
  },
  "processing": {
    "whisper_model": "small",
    "cache_results": false,
    "show_progress": true
  }
}
